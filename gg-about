#!/bin/bash
# Include gg-lib
. .gg-lib

# Get current script location in $SCRIPT_PATH var
get_script_path

echo ''
echo 'GALTZAGORRI scripts'
echo ''
echo 'SETUP'
echo "It's recommended to add Galtzagorri installation path to you PATH env var."
echo "Check if '${SCRIPT_PATH}' is found in your PATH:"
echo ''
echo "PATH=${PATH}"
echo ''
echo 'If not, just add this line into your .profile file so you can run Galtzagorri (gg) scripts from anywhere:'
echo "export PATH=\$PATH:${SCRIPT_PATH}"
echo ''