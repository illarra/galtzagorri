#!/bin/bash
# Include gg-lib
. .gg-paths

if [ -z "$1" ]; then
    echo ''
    echo "Usage: gg-nginx-vhost-list-enabled <filter>"
    echo "Use % filter to show all entries."
    echo ''
else 
    if [ $1 = "%" ]; then
        ls $GG_NGINX_ENABLED
    else
        ls $GG_NGINX_ENABLED | grep --color -i $1
    fi
fi